<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/book_list_selector">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="14dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_book_list_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="6dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="1"
                android:textAlignment="center"
                android:background="@drawable/item_counter_bg"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/color_res_main_list_catalog_item_book_counter"/>
            <TextView
                android:id="@+id/txt_book_list_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Tieng Chim Hot"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/color_res_book_list_item_text"/>
            <TextView
                android:id="@+id/txt_book_list_item_part_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="12"
                android:background="@drawable/item_counter_bg"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/color_res_main_list_catalog_item_book_counter"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_account_box_white_18"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp" />
            <TextView
                android:id="@+id/txt_book_list_item_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:singleLine="true"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textStyle="italic"
                android:text="Binh"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/color_res_book_list_item_text"/>
            <ImageView
                android:id="@+id/imvLike"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_favorite_white_18"
                android:layout_marginStart="2dp"
                android:padding="2dp"
                android:background="@drawable/item_property_symbol_bg"
                android:layout_marginEnd="2dp"
                android:clickable="false"/>
            <TextView
                android:id="@+id/txt_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/imvView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:background="@drawable/item_property_symbol_bg"
                android:src="@drawable/baseline_visibility_white_18"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="2dp"
                android:clickable="false"/>
            <TextView
                android:id="@+id/txt_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/imvRecommented"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:background="@drawable/item_property_symbol_bg"
                android:src="@drawable/baseline_verified_user_white_18"
                android:layout_marginStart="5dp"
                android:clickable="false"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>