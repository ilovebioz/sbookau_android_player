<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingTop="6dp"
    android:background="@drawable/main_list_catalog_item_selector">

    <ImageView
        android:id="@+id/img_main_list_catalog_item_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/txt_main_list_catalog_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_res_main_list_catalog_item_title"
        android:gravity="center_vertical"
        android:paddingEnd="40dp"
        android:layout_weight="1"/>
    
    <TextView android:id="@+id/txt_main_list_catalog_item_book_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_counter_bg"
        android:layout_marginEnd="16dp"
        android:textColor="@color/color_res_main_list_catalog_item_book_counter"/>

</LinearLayout>