<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/audio_part_list_selector">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="4dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_audio_part_list_item_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="6dp"
                        android:singleLine="true"
                        android:text="1. "
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/color_res_audio_part_list_item_text"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_audio_part_list_item_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:text="TÃ u Gloria Scott"
                        android:textSize="14sp"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/color_res_audio_part_list_item_text"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="4dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_audio_part_list_item_format"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:singleLine="true"
                        android:text="mp3"
                        android:textSize="12sp"
                        android:background="@drawable/item_counter_bg"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/color_res_main_list_catalog_item_book_counter"
                        android:textStyle="italic"/>
                    <TextView
                        android:id="@+id/txt_audio_part_list_item_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginStart="3dp"
                        android:textSize="12sp"
                        android:text="1h7s"
                        android:background="@drawable/item_counter_bg"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/color_res_main_list_catalog_item_book_counter"
                        android:textStyle="italic"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/btn_media_update_selector"
                    android:background="@drawable/btn_custom_image_large_bg"
                    android:focusable="false"/>
                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/btn_media_delete_selector"
                    android:background="@drawable/btn_custom_image_large_bg"
                    android:focusable="false"/>
                <ImageButton
                    android:id="@+id/btnReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/btn_media_report_selector"
                    android:background="@drawable/btn_custom_image_large_bg"
                    android:focusable="false"/>
                <ImageButton
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/btn_media_download_selector"
                    android:background="@drawable/btn_custom_image_large_bg"
                    android:focusable="false"/>
            </LinearLayout>
        </LinearLayout>
        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/pBProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:max="100" />
    </LinearLayout>
</androidx.cardview.widget.CardView>